<Window x:Class="Whiteboard.ProfileEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Whiteboard"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        Title="ProfileEditWindow" Height="600" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True"
        Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="DarkGray" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown" Grid.ColumnSpan="2" Grid.RowSpan="1">
            <Grid Grid.Row="0" Grid.Column="0"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Background="AliceBlue" CornerRadius="10" Margin="20" Grid.ColumnSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Profile Edit" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1"/>
                <Button Style="{StaticResource TopButton}" Margin="0,1,15,0" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="1"
                                Click="DiscardButton_Click">
                    <Icon:PackIconMaterial Kind="CloseThick"/>
                </Button>
                <DataGrid x:Name="EmployeeDataGrid" ItemsSource="{Binding ScheduleData}" SelectedItem="{Binding SelectedEmployee}" AutoGenerateColumns="False"
                      IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding EmployeeName}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Vertical" Margin="10">

                    <Image x:Name="EmployeePhoto" Source="{Binding SelectedEmployee.EmployeePhoto}" Margin="0,0,0,0" Style="{StaticResource EmployeePhotoFrame}"/>

                    <TextBlock Text="Name:" Margin="2" HorizontalAlignment="Center"/>
                    <TextBox x:Name="NameTextBox" Margin="2" Width="125"
                               Text="{Binding SelectedEmployee.EmployeeName}"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Monday:" Margin="2" HorizontalAlignment="Center"/>
                        <TextBox x:Name="MondayStartTextBox" Margin="2" Width="50" HorizontalAlignment="Left"
                                   Text="{Binding SelectedEmployee.EmployeeMondayStart}"/>
                        <TextBox x:Name="MondayEndTextBox" Margin="2" Width="50" HorizontalAlignment="Right"
                                   Text="{Binding SelectedEmployee.EmployeeMondayEnd}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Tuesday:" Margin="2" HorizontalAlignment="Center"/>
                        <TextBox x:Name="TuesdayStartTextBox" Margin="2" Width="50"
                                   Text="{Binding SelectedEmployee.EmployeeTuesdayStart}"/>
                        <TextBox x:Name="TuesdayEndTextBox" Margin="2" Width="50"
                                   Text="{Binding SelectedEmployee.EmployeeTuesdayEnd}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Wednesday:" Margin="2" HorizontalAlignment="Center"/>
                        <TextBox x:Name="WednesdayStartTextBox" Margin="2" Width="50"
                                   Text="{Binding SelectedEmployee.EmployeeWednesdayStart}"/>
                        <TextBox x:Name="WednesdayEndTextBox" Margin="2" Width="50"
                                   Text="{Binding SelectedEmployee.EmployeeWednesdayEnd}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Thursday:" Margin="2" HorizontalAlignment="Center"/>
                        <TextBox x:Name="ThursdayStartTextBox" Margin="2" Width="50"
                                   Text="{Binding SelectedEmployee.EmployeeThursdayStart}"/>
                        <TextBox x:Name="ThursdayEndTextBox" Margin="2" Width="50"
                                   Text="{Binding SelectedEmployee.EmployeeThursdayEnd}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Friday:" Margin="2" HorizontalAlignment="Center"/>
                        <TextBox x:Name="FridayStartTextBox" Margin="2" Width="50"
                                   Text="{Binding SelectedEmployee.EmployeeFridayStart}"/>
                        <TextBox x:Name="FridayEndTextBox" Margin="2" Width="50"
                                   Text="{Binding SelectedEmployee.EmployeeFridayEnd}"/>
                    </StackPanel>

                    <Button Width="150" Height="20" Click="UploadPictureButton_Click">
                        <TextBlock Text="Upload Picture" HorizontalAlignment="Center"/>
                    </Button>
                    <Button Width="150" Height="20" Click="SaveButton_Click">
                        <TextBlock Text="Save Changes" HorizontalAlignment="Center"/>
                    </Button>
                    <Button Width="150" Height="20" Click="AddButton_Click">
                        <TextBlock Text="Add New" HorizontalAlignment="Center"/>
                    </Button>
                    <Button Width="150" Height="20" Click="RemoveButton_Click">
                        <TextBlock Text="Remove Employee" HorizontalAlignment="Center"/>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
