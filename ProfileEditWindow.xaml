<Window x:Class="Whiteboard.ProfileEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Whiteboard"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        Title="ProfileEditWindow" Height="575" Width="550" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True"
        Background="#778899" MouseDown="Border_MouseDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Style="{StaticResource TopButton}" Margin="0,10,10,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                Panel.ZIndex="1" Click="DiscardButton_Click">
            <Icon:PackIconMaterial Kind="CloseThick"/>
        </Button>

        <Border Background="#323a45" CornerRadius="10" Margin="5,5,5,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="542*"/>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DataGrid HorizontalAlignment="Left" Margin="10,19,0,23" RowStyle="{DynamicResource DataGridRowStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" Style="{DynamicResource DataGridStyle1}" 
                          x:Name="EmployeeDataGrid" ItemsSource="{Binding ScheduleData}" SelectedItem="{Binding SelectedEmployee}" Grid.ColumnSpan="2" Grid.Row="1">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Name">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            
                                        <Icon:PackIconMaterial Kind="Account" HorizontalAlignment="Left" Margin="0,0,0,0" Grid.Row="0"/>
                                        <TextBlock Text="{Binding EmployeeName}" HorizontalAlignment="Center" Grid.Row="0"  Margin="11,0,0,0"/>

                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Width="20" Height="20" Click="AddButton_Click" Style="{StaticResource GeneralButtons}" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0" Margin="10,2,0,0" Grid.RowSpan="2">
                    <Icon:PackIconMaterial Kind="PlusOutline" HorizontalAlignment="Center" Style="{StaticResource ConfigIcons}"/>
                </Button>

                <Button Width="20" Height="20" Click="RemoveButton_Click" Style="{StaticResource RemoveButton}" VerticalAlignment="Top" HorizontalAlignment="Left"  Grid.Column="0" Margin="30,2,0,0" Grid.RowSpan="2">
                    <Icon:PackIconMaterial Kind="MinusBoxOutline" HorizontalAlignment="Center" Style="{StaticResource ConfigIcons}"/>
                </Button>

                <Rectangle Width="2" Height="400" HorizontalAlignment="Left" Margin="35,69,0,73" Stroke="White" Grid.Column="1" Grid.Row="1"/>

                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,0,0" Grid.ColumnSpan="2" Grid.Row="1">

                    <Image x:Name="EmployeePhoto" Source="{Binding SelectedEmployee.EmployeePhoto}" Margin="25,25,25,25" Style="{StaticResource EmployeePhotoFrame}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Name:" Margin="-10,0,0,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="1"/>
                        <TextBox x:Name="NameTextBox" Margin="10,10,0,10" Width="150" Style="{DynamicResource TextBoxes}"  Grid.Column="1" 
                                     Text="{Binding SelectedEmployee.EmployeeName}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Title:" Margin="-10,0,0,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="1"/>
                        <TextBox x:Name="TitleTextBox" Margin="10,10,0,10" Width="150" Style="{DynamicResource TextBoxes}" Grid.Column="1"
                                     Text="{Binding SelectedEmployee.EmployeeTitle}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Account Name:" Margin="-10,0,0,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="1"/>
                        <TextBox x:Name="AccountNameTextBox" Margin="10,10,0,10" Width="150" Style="{DynamicResource TextBoxes}" Grid.Column="1"
                                     Text="{Binding SelectedEmployee.EmployeeAccountName}"/>
                    </Grid>

                    <Separator Width="275" Height="2" Foreground="White" Margin="5,5,5,5"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--Monday-->
                        <TextBlock Text="Monday" Margin="0,-20,-25,0" HorizontalAlignment="Right" Style="{StaticResource ProfileEditHeaders}" Grid.Column="0"
                                   FontWeight="SemiBold"/>

                        <TextBlock Text="Start:" Margin="35,5,12,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="1"/>
                        <TextBox x:Name="MondayStartTextBox" Margin="55,10,0,10" Width="60" Style="{DynamicResource TextBoxes}" Grid.Column="1"
                                       Text="{Binding SelectedEmployee.EmployeeMondayStart}"/>

                        <TextBlock Text="End:" Margin="10,5,12,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="2"/>
                        <TextBox x:Name="MondayEndTextBox" Margin="-10,10,0,10" Width="60" Style="{DynamicResource TextBoxes}" Grid.Column="2"
                                       Text="{Binding SelectedEmployee.EmployeeMondayEnd}"/>

                        <!--Tuesday-->
                        <TextBlock Text="Tuesday" Margin="0,-20,-25,0" HorizontalAlignment="Right" Style="{StaticResource ProfileEditHeaders}" Grid.Column="0" Grid.Row="1"
                                   FontWeight="SemiBold"/>

                        <TextBlock Text="Start:" Margin="35,5,12,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="1" Grid.Row="1"/>
                        <TextBox x:Name="TuesdayStartTextBox" Margin="55,10,0,10" Width="60" Style="{DynamicResource TextBoxes}" Grid.Column="1" Grid.Row="1"
                                       Text="{Binding SelectedEmployee.EmployeeTuesdayStart}"/>

                        <TextBlock Text="End:" Margin="10,5,12,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="2" Grid.Row="1"/>
                        <TextBox x:Name="TuesdayEndTextBox" Margin="-10,10,0,10" Width="60" Style="{DynamicResource TextBoxes}" Grid.Column="2" Grid.Row="1"
                                       Text="{Binding SelectedEmployee.EmployeeTuesdayEnd}"/>

                        <!--Wednesday-->
                        <TextBlock Text="Wednesday" Margin="0,-20,-25,0" HorizontalAlignment="Right" Style="{StaticResource ProfileEditHeaders}" Grid.Column="0" Grid.Row="2"
                                   FontWeight="SemiBold"/>

                        <TextBlock Text="Start:" Margin="35,5,12,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="1" Grid.Row="2"/>
                        <TextBox x:Name="WednesdayStartTextBox" Margin="55,10,0,10" Width="60" Style="{DynamicResource TextBoxes}" Grid.Column="1" Grid.Row="2"
                                       Text="{Binding SelectedEmployee.EmployeeWednesdayStart}"/>

                        <TextBlock Text="End:" Margin="10,5,12,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="2" Grid.Row="2"/>
                        <TextBox x:Name="WednesdayEndTextBox" Margin="-10,10,0,10" Width="60" Style="{DynamicResource TextBoxes}" Grid.Column="2" Grid.Row="2"
                                       Text="{Binding SelectedEmployee.EmployeeWednesdayEnd}"/>

                        <!--Thursday-->
                        <TextBlock Text="Thursday" Margin="0,-20,-25,0" HorizontalAlignment="Right" Style="{StaticResource ProfileEditHeaders}" Grid.Column="0" Grid.Row="3"
                                   FontWeight="SemiBold"/>

                        <TextBlock Text="Start:" Margin="35,5,12,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="1" Grid.Row="3"/>
                        <TextBox x:Name="ThursdayStartTextBox" Margin="55,10,0,10" Width="60" Style="{DynamicResource TextBoxes}" Grid.Column="1" Grid.Row="3"
                                       Text="{Binding SelectedEmployee.EmployeeThursdayStart}"/>

                        <TextBlock Text="End:" Margin="10,5,12,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="2" Grid.Row="3"/>
                        <TextBox x:Name="ThursdayEndTextBox" Margin="-10,10,0,10" Width="60" Style="{DynamicResource TextBoxes}" Grid.Column="2" Grid.Row="3"
                                       Text="{Binding SelectedEmployee.EmployeeThursdayEnd}"/>

                        <!--Friday-->
                        <TextBlock Text="Friday" Margin="0,-20,-25,0" HorizontalAlignment="Right" Style="{StaticResource ProfileEditHeaders}" Grid.Column="0" Grid.Row="4"
                                   FontWeight="SemiBold"/>

                        <TextBlock Text="Start:" Margin="35,5,12,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="1" Grid.Row="4"/>
                        <TextBox x:Name="FridayStartTextBox" Margin="55,10,0,10" Width="60" Style="{DynamicResource TextBoxes}" Grid.Column="1" Grid.Row="4"
                                       Text="{Binding SelectedEmployee.EmployeeFridayStart}"/>

                        <TextBlock Text="End:" Margin="10,5,12,0" HorizontalAlignment="Left" Style="{StaticResource ProfileEditHeaders}" Grid.Column="2" Grid.Row="4"/>
                        <TextBox x:Name="FridayEndTextBox" Margin="-10,10,0,10" Width="60" Style="{DynamicResource TextBoxes}" Grid.Column="2" Grid.Row="4"
                                       Text="{Binding SelectedEmployee.EmployeeFridayEnd}"/>

                    </Grid>

                    <Button Width="120" Height="25" Click="SaveButton_Click" Style="{StaticResource GeneralButtons}" HorizontalAlignment="Center" Margin="75,10,0,20">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="ContentSave" Margin="0,0,10,0"/>
                            <TextBlock Text="Save Changes"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
