<Window x:Class="Whiteboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whiteboard"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="MainWindow" Height="1040" Width="1900" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="DarkGray">
    <Window.Resources>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--Top Border-->
        <Border Background="DarkGray" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown" Grid.ColumnSpan="3" Grid.RowSpan="1">
            <Grid Grid.Row="0" Grid.Column="2">
                <Button Style="{StaticResource CloseButton}" Margin="0,1,15,0" HorizontalAlignment="Right"
                                Click="CloseButton_Click">
                    <Icon:PackIconMaterial Kind="CloseThick"/>
                </Button>

                <Button Style="{StaticResource TopButton}" Margin="0,5,50,0" HorizontalAlignment="Right"
                                Click="MinimizeButton_Click">
                    <Icon:PackIconMaterial Kind="WindowMinimize"/>
                </Button>
                
                <Button x:Name="MenuButton" Style="{StaticResource TopButton}" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                    Click="ProfileEditButton_Click" Height="30">
                    <Icon:PackIconMaterial Kind="Menu"/>
                </Button>

            </Grid>
        </Border>

        <!--Top Grid Row for Main Content-->
        <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding ScheduleData}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!--Panel Generation-->
                            <StackPanel Margin="0,0,5,0" Width="225" Height="400">
                                <!--Name-->
                                <TextBlock Text="{Binding EmployeeName}" Margin="15,15,15,15" Style="{StaticResource EmployeeNameHeader}"/>

                                <!--Photo-->
                                <Image Source="{Binding EmployeePhoto}" Margin="0,0,0,0" Style="{StaticResource EmployeePhotoFrame}"/>

                                <!--Status Indicator-->
                                <StackPanel Orientation="Horizontal" Margin="10,20,20,10">
                                    <TextBlock Text="{Binding EmployeeCurrentStatus}" Margin="75,0,0,0" Style="{StaticResource StatusIndicatorText}"/>
                                </StackPanel>

                                <!--Day Schedules-->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Monday" Grid.Column="0" Style="{StaticResource DayScheduleHeaders}"/>
                                        <TextBlock Text="{Binding EmployeeMondayStart}" Grid.Column="1" Style="{StaticResource DayScheduleTimes}"/>
                                        <TextBlock Text="{Binding EmployeeMondayEnd}" Grid.Column="2" Style="{StaticResource DayScheduleTimes}"/>
                                    </Grid>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Tuesday" Grid.Column="0" Style="{StaticResource DayScheduleHeaders}"/>
                                        <TextBlock Text="{Binding EmployeeTuesdayStart}" Grid.Column="1" Style="{StaticResource DayScheduleTimes}"/>
                                        <TextBlock Text="{Binding EmployeeTuesdayEnd}" Grid.Column="2" Style="{StaticResource DayScheduleTimes}"/>
                                    </Grid>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Wednesday" Grid.Column="0" Style="{StaticResource DayScheduleHeaders}"/>
                                        <TextBlock Text="{Binding EmployeeWednesdayStart}" Grid.Column="1" Style="{StaticResource DayScheduleTimes}"/>
                                        <TextBlock Text="{Binding EmployeeWednesdayEnd}" Grid.Column="2" Style="{StaticResource DayScheduleTimes}"/>
                                    </Grid>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Thursday" Grid.Column="0" Style="{StaticResource DayScheduleHeaders}"/>
                                        <TextBlock Text="{Binding EmployeeThursdayStart}" Grid.Column="1" Style="{StaticResource DayScheduleTimes}"/>
                                        <TextBlock Text="{Binding EmployeeThursdayEnd}" Grid.Column="2" Style="{StaticResource DayScheduleTimes}"/>
                                    </Grid>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Friday" Grid.Column="0" Style="{StaticResource DayScheduleHeaders}"/>
                                        <TextBlock Text="{Binding EmployeeFridayStart}" Grid.Column="1" Style="{StaticResource DayScheduleTimes}"/>
                                        <TextBlock Text="{Binding EmployeeFridayEnd}" Grid.Column="2" Style="{StaticResource DayScheduleTimes}"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!--Bottom Grid Row for Main Content-->
        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
            <Border Background="DarkGreen" Width="550" HorizontalAlignment="Left" CornerRadius="25" Margin="20,10,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Upcoming Events" FontSize="20" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Margin="20,0,15,5" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <Icon:PackIconMaterial Kind="Calendar" Background="Transparent" Foreground="White" Width="35" Height="35" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"
                            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="5"/>

                    <TextBlock Text="01/01/2025" Grid.Column="1" Grid.Row="1" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Margin="30,0,0,0"/>
                    <TextBlock Text="10am - Training thing" Grid.Column="2" Grid.Row="1" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="25,0,0,0"/>

                    <TextBlock Text="03/21/2024" Grid.Column="1"  Grid.Row="2" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Margin="30,0,0,0"/>
                    <TextBlock Text="ProjectWise Updates Yet Again" Grid.Column="2" Grid.Row="2" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="25,0,0,0"/>

                    <TextBlock Text="12/25/2025" Grid.Column="1"  Grid.Row="3" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Margin="30,0,0,0"/>
                    <TextBlock Text="10-11pm - Santa delivers more clumps of coal." Grid.Column="2" Grid.Row="3" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="25,0,0,0"/>

                    <TextBlock Text="01/15/2042" Grid.Column="1"  Grid.Row="4" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Margin="30,0,0,0"/>
                    <TextBlock Text="Remodel begins, possibly." Grid.Column="2" Grid.Row="4" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="25,0,0,0"/>

                </Grid>
            </Border>
            <Border Background="DarkBlue" Width="550" HorizontalAlignment="Center" CornerRadius="25" Margin="0,10,20,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.RowSpan="5"  Grid.ColumnSpan="2"  >
                        <TextBlock Text="WFL Service Desk Phone: (360) 619-7600" Grid.Column="0" Grid.Row="1" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="20,45,20,5" TextWrapping="Wrap"/>
                        <TextBlock Text="WFL Service Desk: WFLHD.ServiceDesk@dot.gov" Grid.Column="0" Grid.Row="1" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="20,5,20,5" TextWrapping="Wrap"/>
                        <TextBlock Text="OCIO Email: OCIOClientCenter@dot.gov" Grid.Column="0" Grid.Row="1" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="20,5,20,5" TextWrapping="Wrap"/>
                        <TextBlock Text="OCIO Client Center Phone: (800) 466-5221" Grid.Column="0" Grid.Row="1" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="20,5,20,5" TextWrapping="Wrap"/>
                    </StackPanel>
                    <TextBlock Text="Did you Know?" FontSize="20" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Margin="20,0,15,5" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1"/>
                    <TextBlock Text="Please don't forget to fill out the surveys after each ticket." Grid.Column="2" Grid.Row="1" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="20,-90,20,0" Grid.RowSpan="4" TextWrapping="Wrap"/>
                    <TextBlock Text="This gives valuable information regarding your local team!" Grid.Column="2" Grid.Row="1" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="20,50,20,0" Grid.RowSpan="4" TextWrapping="Wrap"/>

                </Grid>
            </Border>
            <Border Background="DarkGreen" Width="550" HorizontalAlignment="Right" CornerRadius="25" Margin="0,10,20,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="185"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Icon:PackIconMaterial Kind="WifiAlert" Background="Transparent" Foreground="White" Width="35" Height="35" HorizontalAlignment="Left" VerticalAlignment="Center"
                            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="2" Margin="75,0,0,0"/>
                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="2" >
                        <TextBlock Text="Download" FontSize="18" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"
                               Margin="25,0,15,5" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1"/>
                        <TextBlock Text="25" FontSize="18" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Top"
                          Margin="25,0,15,5" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1"/>

                        <TextBlock Text="Upload" FontSize="18" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                               Margin="25,0,15,5" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="1"/>
                        <TextBlock Text="25" FontSize="18" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                          Margin="25,0,15,5" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="1"/>
                    </Grid>


                    <TextBlock Text="Trivia" FontSize="20" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Margin="20,0,15,5" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1"/>
                    <TextBlock Text="Which Star Trek captain is your favorite?" FontSize="20" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"
                           Margin="20,10,15,5" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="3" TextWrapping="Wrap"/>
                    <TextBlock Text="https://takethepoll.com/QER53254s" FontSize="16" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                           Margin="20,0,15,5" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="3" TextWrapping="Wrap"/>


                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>
