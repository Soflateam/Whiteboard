<Window x:Class="Whiteboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whiteboard"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="MainWindow" Height="1080" Width="1920" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True"
        MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown" Background="#778899">
    <Window.Resources>

    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--Top Border-->
        <Border Background="#323a45" Grid.ColumnSpan="3" Grid.RowSpan="1">
            <Grid Grid.Row="0" Grid.Column="2">
                <Button Style="{StaticResource CloseButton}" Margin="0,1,15,0" HorizontalAlignment="Right"
                                Click="CloseButton_Click">
                    <Icon:PackIconMaterial Kind="CloseThick"/>
                </Button>

                <Button Style="{StaticResource TopButton}" Margin="0,5,50,0" HorizontalAlignment="Right"
                                Click="MinimizeButton_Click">
                    <Icon:PackIconMaterial Kind="WindowMinimize"/>
                </Button>
                
                <Button x:Name="MenuButton" Style="{StaticResource TopButton}" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                    Click="ProfileEditButton_Click" Height="30">
                    <Icon:PackIconMaterial Kind="Menu"/>
                </Button>

            </Grid>
        </Border>

        <!--Top Grid Row for Main Content-->
        <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="20,5,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding ScheduleData}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#323a45" CornerRadius="25" Margin="15,15,15,15">
                                <!--Panel Generation-->
                                <StackPanel Margin="0,0,5,0" Width="200" Height="375">
                                <!--Name-->
                                <TextBlock Text="{Binding EmployeeName}" Margin="15,15,15,10" Style="{StaticResource EmployeeNameHeader}"/>
                                <TextBlock Text="{Binding EmployeeTitle}" Style="{StaticResource DayScheduleHeaders}" HorizontalAlignment="Center" Margin="2,5,0,5"/>

                                <!--Photo-->
                                <Image Source="{Binding EmployeePhoto}" Margin="0,0,0,0" Style="{StaticResource EmployeePhotoFrame}"/>

                                <!--Status Indicator-->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Height="45" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding EmployeeCurrentStatus}" Style="{StaticResource StatusIndicatorText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!--Day Schedules-->
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="6,4,2,4">
                                        <Grid Background="#3f6184">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="75"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="75"/>
                                        </Grid.ColumnDefinitions>
                                            <TextBlock Text="Mon" Grid.Column="0" Style="{StaticResource DayScheduleHeaders}" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                            <TextBlock Text="{Binding EmployeeMondayStart}" Grid.Column="1" Style="{StaticResource DayScheduleTimes}"/>
                                            <TextBlock Text="-" Grid.Column="2" Style="{StaticResource DayScheduleHeaders}" Margin="0,0,0,0"/>
                                            <TextBlock Text="{Binding EmployeeMondayEnd}" Grid.Column="3" Style="{StaticResource DayScheduleTimes}"/>
                                        </Grid>
                                </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="6,4,2,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="75"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="75"/>
                                        </Grid.ColumnDefinitions>
                                            <TextBlock Text="Tues" Grid.Column="0" Style="{StaticResource DayScheduleHeaders}" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                        <TextBlock Text="{Binding EmployeeTuesdayStart}" Grid.Column="1" Style="{StaticResource DayScheduleTimes}"/>
                                        <TextBlock Text="-" Grid.Column="2" Style="{StaticResource DayScheduleHeaders}" Margin="0,0,0,0"/>
                                        <TextBlock Text="{Binding EmployeeTuesdayEnd}" Grid.Column="3" Style="{StaticResource DayScheduleTimes}"/>
                                    </Grid>
                                </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="6,4,2,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="75"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="75"/>
                                        </Grid.ColumnDefinitions>
                                            <TextBlock Text="Wed" Grid.Column="0" Style="{StaticResource DayScheduleHeaders}" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                        <TextBlock Text="{Binding EmployeeWednesdayStart}" Grid.Column="1" Style="{StaticResource DayScheduleTimes}"/>
                                        <TextBlock Text="-" Grid.Column="2" Style="{StaticResource DayScheduleHeaders}" Margin="0,0,0,0"/>
                                        <TextBlock Text="{Binding EmployeeWednesdayEnd}" Grid.Column="3" Style="{StaticResource DayScheduleTimes}"/>
                                    </Grid>
                                </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="6,4,2,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="75"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="75"/>
                                        </Grid.ColumnDefinitions>
                                            <TextBlock Text="Thurs" Grid.Column="0" Style="{StaticResource DayScheduleHeaders}" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                        <TextBlock Text="{Binding EmployeeThursdayStart}" Grid.Column="1" Style="{StaticResource DayScheduleTimes}"/>
                                        <TextBlock Text="-" Grid.Column="2" Style="{StaticResource DayScheduleHeaders}" Margin="0,0,0,0"/>
                                        <TextBlock Text="{Binding EmployeeThursdayEnd}" Grid.Column="3" Style="{StaticResource DayScheduleTimes}"/>
                                    </Grid>
                                </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="6,4,2,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="75"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="75"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Fri" Grid.Column="0" Style="{StaticResource DayScheduleHeaders}" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                            <TextBlock Text="{Binding EmployeeFridayStart}" Grid.Column="1" Style="{StaticResource DayScheduleTimes}"/>
                                            <TextBlock Text="-" Grid.Column="2" Style="{StaticResource DayScheduleHeaders}" Margin="0,0,0,0"/>
                                            <TextBlock Text="{Binding EmployeeFridayEnd}" Grid.Column="3" Style="{StaticResource DayScheduleTimes}"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!--Bottom Grid Row for Misc Content-->
        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Background="#323a45" Height="225">
            <Border Background="#5faeb6" Width="550" HorizontalAlignment="Left" CornerRadius="25" Margin="20,10,0,15">
                <Grid>
                    <ItemsControl ItemsSource="{Binding BottomDataTable}" Grid.Row="1" Grid.Column="1" Height="200" Width="500">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="25"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon for the event -->
                                        <Icon:PackIconMaterial Kind="CalendarAlert" Style="{StaticResource GeneralIcons}"
                                                               Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" />

                                        <!-- Event Date and Description for each event -->
                                        <TextBlock Text="{Binding EventDate1}" Style="{StaticResource EventCalendar}" Grid.Row="1" Grid.Column="1"/>
                                        <TextBlock Text="{Binding EventDescription1}" Style="{StaticResource EventCalendarDescription}" Grid.Row="1" Grid.Column="2"/>

                                        <TextBlock Text="{Binding EventDate2}" Style="{StaticResource EventCalendar}" Grid.Row="2" Grid.Column="1"/>
                                        <TextBlock Text="{Binding EventDescription2}" Style="{StaticResource EventCalendarDescription}" Grid.Row="2" Grid.Column="2"/>

                                        <TextBlock Text="{Binding EventDate3}" Style="{StaticResource EventCalendar}" Grid.Row="3" Grid.Column="1"/>
                                        <TextBlock Text="{Binding EventDescription3}" Style="{StaticResource EventCalendarDescription}" Grid.Row="3" Grid.Column="2"/>

                                        <TextBlock Text="{Binding EventDate4}" Style="{StaticResource EventCalendar}" Grid.Row="4" Grid.Column="1"/>
                                        <TextBlock Text="{Binding EventDescription4}" Style="{StaticResource EventCalendarDescription}" Grid.Row="4" Grid.Column="2"/>
                                    </Grid>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <Border Background="#3f6184" Width="500" Height="125" HorizontalAlignment="Center" CornerRadius="10" Margin="0,20,20,15" VerticalAlignment="Top">
                <Grid>
                    <ItemsControl Grid.Row="1" Grid.Column="1" Height="200" Width="500">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <Border Background="#3f6184" Width="600" Height="40" HorizontalAlignment="Center" CornerRadius="10" Margin="0,10,20,15" VerticalAlignment="Bottom">
                <Grid>
                    <ItemsControl ItemsSource="{Binding BottomDataTable}" Grid.Row="1" Grid.Column="1" Height="200" Width="500">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Contact1}" Style="{StaticResource Contacts}"/>
                                    <TextBlock Text="{Binding Contact2}" Style="{StaticResource Contacts}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
            
            <Border Background="#5faeb6" Width="550" HorizontalAlignment="Right" CornerRadius="25" Margin="0,10,20,15">
                <Grid>
                    <Icon:PackIconMaterial Kind="HeadQuestion" Style="{StaticResource GeneralIcons}" Margin="20,-10,0,0"/>
                    
                    <ItemsControl ItemsSource="{Binding BottomDataTable}" Height="200" Width="500">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding TriviaQuestion}" Style="{StaticResource TriviaHeader}"/>
                                    <TextBlock Text="{Binding TriviaAnswer}" Style="{StaticResource TriviaAnswer}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
